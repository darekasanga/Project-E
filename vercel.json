{
  "version": 2,
  "functions": {
    "api/*.js": {
      "runtime": "vercel/node@18.x"
    },
    "api/*.php": {
      "runtime": "now-php@1.0.0"
    }
  },
  "rewrites": [
    { "source": "/draw", "destination": "/public/draw.html" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ]
}